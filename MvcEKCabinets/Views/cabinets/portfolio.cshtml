 @using EkbDataAccess
@model MvcEKCabinets.Models.HomeViewModel




  <!-- Page Content -->
<div class="container">

    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Portfolio
                <small>Projects we have done</small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (Portfolio p in Model.Portfolios)
        {
            
            <div class="col-md-6 portfolio-item">
                <h2>
                    <a href="/cabinets/Lines?lineId=@p.LineId">@p.Line.Name</a>
                </h2>
                <a href="/cabinets/Lines?lineId=@p.LineId">
                    <img class="img-responsive" src="~/Uploads/@p.Image"style="width:700px;height:400px;" alt="">
                </a>
              
                @*<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>*@
            </div>
        }

    </div>
    <!-- /.row -->
</div>